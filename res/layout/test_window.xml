<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical" >
  	<Button
  		android:id="@+id/open_bluetooth"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="open bluetooth" />
  	<Button
  		android:id="@+id/open_wifi"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="open wifi" />
  	<Button
  		android:id="@+id/open_gps"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="open gps" />
  		
  	<Button
  		android:id="@+id/open_record"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="open record" />
  	<Button
  		android:id="@+id/open_another"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:text="open api" />
</LinearLayout>
